{{!-- html for when a user edits a post --}}
<div class="column is-12">
    <div class="card m-3">
        <header class="card-header has-background-link-light">
            <p class="card-header-title">Edit Post</p>
        </header>
        <!-- title input -->
        <div class="card-content">
            <div class="field">
                <label class="label">Title</label>
                <div class="control">
                    <input class="input" id="post-title" type="text" placeholder="title of post" value="{{post.title}}">
                </div>
            </div>
        </div>
        <!-- content input -->
        <div class="card-content">
            <div class="field">
                <label class="label">Content</label>
                <div class="control">
                    <textarea class="textarea" id="post-text" placeholder="Post content here">{{post.post_text}}</textarea>
                </div>
            </div>
        </div>
        <!-- update & delete button -->
        <div class="card-content">
            <div class="buttons">
                <button class="button is-link" id="#edit-post-form">Update Post</button>
                <button class="button is-link" id="#delete-post-btn">Delete Post</button>
            </div>
        </div>
    </div>
</div>
{{!-- add comments --}}
<div class="column is-12" id="comment-form">
    <div class="card m-3">
        <header class="card-header has-background-link-light">
            <p class="card-header-title"></p>
        </header>
        <!-- content input -->
        <div class="card-content">
            <div class="field">
                <label class="label">Comment</label>
                <div class="control">
                    <textarea class="textarea" id="comment-body" placeholder="Post comment here"></textarea>
                </div>
            </div>
        </div>
        <!-- create button -->
        <div class="card-content">
            <div class="field">
                <button class="button is-link" type="submit">Submit</button>
            </div>
        </div>
    </div>
</div>
