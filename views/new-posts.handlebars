<div class="column is-12" id="new-post-form">
    <div class="card m-3">
        <header class="card-header has-background-link-light">
            <p class="card-header-title">Create New Post</p>
        </header>
        <!-- title input -->
        <div class="card-content">
            <div class="field">
                <label class="label">Title</label>
                <div class="control">
                    <input class="input" id="post-title" type="text" placeholder="title of post">
                </div>
            </div>
        </div>
        <!-- content input -->
        <div class="card-content">
            <div class="field">
                <label class="label">Content</label>
                <div class="control">
                    <textarea class="textarea" id="post-text" placeholder="Post content here"></textarea>
                </div>
            </div>
        </div>
        <!-- create button -->
        <div class="card-content">
            <div class="field">
                <button class="button is-link" type="submit">Create</button>
            </div>
        </div>
    </div>
</div>

<script src="/public/javascript/add-post.js"></script>